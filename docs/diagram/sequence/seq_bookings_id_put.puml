@startuml
title Bookings Flow: PUT /api/bookings/:id
actor Client
participant "«Node.js»\nserver" as Server
participant "«router»\nbookings" as Router
participant "«middleware»\nauth" as AuthMW
participant "«controller»\nbookings" as Ctrl
database "«MongoDB»\nDatabase" as DB

== Api/bookings/:id ==
Client -> Server : PUT /api/bookings/:id
activate Server
Server -> Router : router.put('/bookings/:id', protect, updateBooking)
activate Router
Router -> AuthMW : protect(req, res, next)
activate AuthMW
AuthMW -> DB : verify JWT / load user
activate DB
DB --> AuthMW : user / ok
deactivate DB
AuthMW --> Router : next()
deactivate AuthMW
Router -> Ctrl : updateBooking(req, res)
activate Ctrl
alt body has bookingDate AND date invalid
  Ctrl --> Client : 400 Bad Request (date out of range)
else ok
  Ctrl -> DB : Booking.findByIdAndUpdate(id, body)
  activate DB
  DB --> Ctrl : booking
  deactivate DB
  Ctrl --> Client : 200 OK { booking }
end
deactivate Ctrl
deactivate Router
deactivate Server
== Api/bookings/:id ==
@enduml