@startuml
title Bookings Flow: DELETE /api/bookings/:id
actor Client
participant "«Node.js»\nserver" as Server
participant "«router»\nbookings" as Router
participant "«middleware»\nauth" as AuthMW
participant "«controller»\nbookings" as Ctrl
database "«MongoDB»\nDatabase" as DB

== Api/bookings/:id ==
Client -> Server : DELETE /api/bookings/:id
activate Server
Server -> Router : router.delete('/bookings/:id', protect, deleteBooking)
activate Router
Router -> AuthMW : protect(req, res, next)
activate AuthMW
AuthMW -> DB : verify JWT / load user
activate DB
DB --> AuthMW : user / ok
deactivate DB
AuthMW --> Router : next()
deactivate AuthMW
Router -> Ctrl : deleteBooking(req, res)
activate Ctrl
Ctrl -> DB : Booking.findById(id)
activate DB
DB --> Ctrl : booking or null
deactivate DB
alt not found
  Ctrl --> Client : 404 Not Found
else found
  Ctrl -> DB : booking.remove()
  activate DB
  DB --> Ctrl : deleted
  deactivate DB
  Ctrl --> Client : 200 OK { success:true }
end
deactivate Ctrl
deactivate Router
deactivate Server
== Api/bookings/:id ==
@enduml